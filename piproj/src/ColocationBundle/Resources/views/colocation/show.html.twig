{% extends "layout/base-layout.html.twig" %}
{% import "AvanzuAdminThemeBundle:layout:macros.html.twig" as macro %}

{% block title %}Colocation - {{ parent() }}{% endblock %}

{% block page_content %}
    <h1>Colocation</h1>

    <table class="table table-hover record_properties">
        <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ colocation.id }}</td>
            </tr>
            <tr>
                <th scope="row">Idusr</th>
                <td>{{ colocation.idUsr }}</td>
            </tr>
            <tr>
                <th scope="row">Datepub</th>
                <td>{{ colocation.datepub|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{ colocation.description }}</td>
            </tr>
            <tr>
                <th scope="row">Etat</th>
                <td>{{ colocation.etat }}</td>
            </tr>
            <tr>
                <th scope="row">Lieu</th>
                <td>{{ colocation.lieu }}</td>
            </tr>
            <tr>
                <th scope="row">Loyermensuel</th>
                <td>{{ colocation.loyermensuel }}</td>
            </tr>
            <tr>
                <th scope="row">Typelogement</th>
                <td>{{ colocation.typelogement }}</td>
            </tr>
            <tr>
                <th scope="row">Typechambre</th>
                <td>{{ colocation.typechambre }}</td>
            </tr>
            <tr>
                <th scope="row">Imgcouverture</th>
                <td>{{ colocation.imgcouverture }}</td>
            </tr>
            <tr>
                <th scope="row">Nbchambre</th>
                <td>{{ colocation.nbchambre }}</td>
            </tr>
            <tr>
                <th scope="row">Commodite</th>
                <td>{{ colocation.commodite }}</td>
            </tr>
            <tr>
                <th scope="row">Datedisponibilite</th>
                <td>{{ colocation.datedisponibilite|date('Y-m-d') }}</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
        {{ form_widget(delete_form) }}

        <div class="btn-group record_actions">

            <a class="btn btn-info" href="{{ path('admin_colocation') }}">
                <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
            </a>

            <a class="btn btn-primary" href="{{ path('admin_colocation_edit', {id: colocation.id}) }}">
                <i class="fa fa-edit"></i> {{ 'Edit'|trans({}, 'admin') }}
            </a>
            <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o"></i> {{ 'Delete'|trans({}, 'admin') }}</button>

        </div>

        <input name="modal" type="hidden" value="0">
    {{ form_end(delete_form) }}

    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'admin') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'admin') }}, {{ 'this procedure is irreversible'|trans({}, 'admin') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'admin') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'admin') }}</button>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'admin') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
